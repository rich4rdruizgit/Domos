<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="proyecto.com.domos.ui.fragments.delivery.DeliveryFragment">

    <com.layer_net.stepindicator.StepIndicator
        android:id="@+id/step_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:siBackgroundColor="@color/colorPrimary"
        app:siStepColor="@color/colorPrimary" />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpagerDelivery"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>


</LinearLayout>
